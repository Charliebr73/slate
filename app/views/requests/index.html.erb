<%= link_to 'Create request', '/requests/new', class: 'btn btn-primary' %>

<div class="waitingList">
  <div class="scroll">
    <ul>
      <li>
        <% if @requests.any? %>
        <% @requests.each_with_index do |request, i| %>
        <div class="waiting">
          <div class="position">
            <%= i+1 %>
          </div>
          <h3><%= current_student.name %></h3>
          <p><%= request.created_at.strftime( '%l:%M%p %e/%m' ) %></p>
          <p><%= request.description %></p>
          <%= request.category %>
          <div class="solveTab">
            <p><%= link_to 'Edit', edit_request_path(request), method: :get, class: 'btn btn-danger' %>
              <%= link_to 'Delete', request_path(request), method: :delete, class: 'btn btn-danger' %></p>
              <a class='close' href='#'>SOLVE</a>
            </div>
          </div>
          <% end %>
          <% else %>
          <br />
          <h3>No requests</h3>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <br />


  <script>
    $(document).ready(function(){

      $('.waiting').on('click', '.close', function() {
        $(this).parent().parent().remove();
      })

    })
  </script>
