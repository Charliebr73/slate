<% if @requests.any? %>
  <% @requests.each do |request| %>
    <h3><%= request.description %></h3>
      <%= request.category %>
        <div class="timestamp">
          <p><%= request.created_at %></p>
          <p><%= link_to 'Edit', edit_request_path(request), method: :get, class: 'btn btn-danger' %></p>
          <p><%= link_to 'Delete', request_path(request), method: :delete, class: 'btn btn-danger' %></p>
        </div>
    <% end %>
<% else %>
  No requests
<% end %>